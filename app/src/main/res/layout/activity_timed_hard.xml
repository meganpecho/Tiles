<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_timed_hard"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidclass.mepec_000.tiles.Timed_Hard"
    android:background="@color/colorBackground">

    <TextView
        android:text="Time Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_text"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25sp"
        android:textColor="@color/colorBlue"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_keeper"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25sp"
        android:textColor="@color/colorBlue"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/time_text"
        android:layout_marginEnd="15dp" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_text"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25sp"
        android:textColor="@color/colorBlue"
        android:layout_below="@+id/time_text"
        android:layout_alignParentEnd="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tile_grid"
        android:background="@color/colorBackground">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:id="@+id/tile_1"
                android:state_selected="@color/tile_color_states"
                android:state_pressed="@color/tile_color_states"
                android:clickable="false"
                android:backgroundTint="@color/tile_color_states" />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:id="@+id/tile_2"
                android:state_selected="@color/tile_color_states"
                android:state_pressed="@color/tile_color_states"
                android:clickable="false"
                android:backgroundTint="@color/tile_color_states" />
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:id="@+id/tile_3"
                android:state_selected="@color/tile_color_states"
                android:state_pressed="@color/tile_color_states"
                android:clickable="false"
                android:backgroundTint="@color/tile_color_states" />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:id="@+id/tile_4"
                android:state_selected="@color/tile_color_states"
                android:state_pressed="@color/tile_color_states"
                android:clickable="false"
                android:backgroundTint="@color/tile_color_states" />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:id="@+id/tile_5"
                android:state_selected="false"
                android:state_pressed="@color/tile_color_states"
                android:clickable="false"
                android:backgroundTint="@color/tile_color_states" />
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:id="@+id/tile_6"
                android:state_selected="@color/tile_color_states"
                android:state_pressed="@color/tile_color_states"
                android:clickable="false"
                android:backgroundTint="@color/tile_color_states" />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:id="@+id/tile_7"
                android:state_selected="@color/tile_color_states"
                android:state_pressed="@color/tile_color_states"
                android:clickable="false"
                android:backgroundTint="@color/tile_color_states" />

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start"
                android:id="@+id/tile_8"
                android:state_selected="@color/tile_color_states"
                android:state_pressed="@color/tile_color_states"
                android:clickable="false"
                android:backgroundTint="@color/tile_color_states" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:id="@+id/tile_9"
            android:state_selected="false"
            android:state_pressed="@color/tile_color_states"
            android:clickable="false"
            android:backgroundTint="@color/tile_color_states" />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:id="@+id/tile_10"
            android:state_selected="false"
            android:state_pressed="@color/tile_color_states"
            android:clickable="false"
            android:backgroundTint="@color/tile_color_states" />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:id="@+id/tile_11"
            android:state_selected="false"
            android:state_pressed="@color/tile_color_states"
            android:clickable="false"
            android:backgroundTint="@color/tile_color_states" />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:id="@+id/tile_12"
            android:state_selected="false"
            android:state_pressed="@color/tile_color_states"
            android:clickable="false"
            android:backgroundTint="@color/tile_color_states" />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:id="@+id/tile_13"
            android:state_selected="false"
            android:state_pressed="@color/tile_color_states"
            android:clickable="false"
            android:backgroundTint="@color/tile_color_states" />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:id="@+id/tile_14"
            android:state_selected="false"
            android:state_pressed="@color/tile_color_states"
            android:clickable="false"
            android:backgroundTint="@color/tile_color_states" />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:id="@+id/tile_15"
            android:state_selected="false"
            android:state_pressed="@color/tile_color_states"
            android:clickable="false"
            android:backgroundTint="@color/tile_color_states" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:id="@+id/tile_16"
            android:state_selected="false"
            android:state_pressed="@color/tile_color_states"
            android:clickable="false"
            android:backgroundTint="@color/tile_color_states" />
    </GridLayout>

    <Button
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:id="@+id/menu_button"
        android:background="@drawable/hamburger_menu"
        android:backgroundTint="@color/colorBlue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_keeper"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="25sp"
        android:textColor="@color/colorBlue"
        android:width="74dp"
        android:layout_below="@+id/time_text"
        android:layout_alignStart="@+id/time_keeper" />

</RelativeLayout>
