<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_modes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidclass.mepec_000.tiles.GameModes"
    android:background="@color/colorBackground">

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/back_arrow"
        android:background="@drawable/back_arrow"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timed_medium"
        android:backgroundTint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        android:textColor="?android:attr/colorPressedHighlight"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/timed_easy"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Timed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timed_main"
        android:backgroundTint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:textSize="50sp"
        android:textColor="@android:color/holo_blue_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:clickable="false"
        android:layout_below="@+id/back_arrow"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timed_easy"
        android:backgroundTint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        android:textColor="?android:attr/colorPressedHighlight"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/timed_main"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Hard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timed_hard"
        android:backgroundTint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        android:textColor="?android:attr/colorPressedHighlight"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/timed_medium"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Clicks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clicks_main"
        android:backgroundTint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:textSize="50sp"
        android:textColor="@android:color/holo_blue_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:clickable="false"
        android:layout_below="@+id/timed_hard"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clicks_easy"
        android:backgroundTint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        android:textColor="?android:attr/colorPressedHighlight"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/clicks_main"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Hard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clicks_hard"
        android:backgroundTint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        android:textColor="?android:attr/colorPressedHighlight"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/clicks_medium"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clicks_medium"
        android:backgroundTint="@android:color/transparent"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        android:textColor="?android:attr/colorPressedHighlight"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/clicks_easy"
        android:layout_alignParentStart="true" />

</RelativeLayout>
